{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"ignore": ["convex/_generated/**/*"],
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	}
}
